@model JobPost
@{
    ViewData["Title"] = "Create or Edit";
}



<form asp-controller="JobPost" asp-action="CreateEditJob" enctype="multipart/form-data">

    <div class="card">
        <div class="card-header">
            <h5>Inserat bearbeiten</h5>
        </div>
        <div class="card-body">
            <input hidden asp-for="Id"/>
            <div class="row">
                <div class="col form-group">
                    <input class="form-control" asp-for="JobTitle" type="text" placeholder="Bitte trage eine Jobbezeichnung ein" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="JobLocation" type="text" placeholder="Bitte trage einen Ort ein" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col form-group">
                    <textarea rows="6" class="form-control" asp-for="Descripton" placeholder="Bitte trage eine ausfürliche Beschreibung ein"></textarea>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-4">
                    <input class="form-control" asp-for="Salary" type="number" placeholder="Wie viel Jahresgehalt zahlst ihr?" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <div class="col-form-label">
                        Wann startet der Job?
                    </div>
                    <input class="form-control" asp-for="StartDate" type="date" />
                </div>
            </div>

            <hr/>

            <div class="row form-group">
                <div class="col">
                    <input class="form-control" asp-for="CompanyName" type="text" placeholder="company name" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactWebSite" type="url" placeholder="website address" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col">
                    <input class="form-control" asp-for="ContactPhone" type="tel" placeholder="phone number"/>
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactEmail" type="email" placeholder="email"/>
                </div>
            </div>

            <div class="row form-group">
                <div class="col">
                    <label>Bild</label>
                    <input class="form-control-file" name="fileForImage" type="file"/>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
        </div>
    </div>

</form>